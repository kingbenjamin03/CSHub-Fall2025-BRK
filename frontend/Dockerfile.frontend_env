# 1. JDK 8 as Env
FROM openjdk:8-jdk-slim

# 2. update apt-get
RUN apt-get update && \
    apt-get install -y --no-install-recommends \
      curl \
      gnupg \
      unzip \
      ca-certificates && \
    rm -rf /var/lib/apt/lists/*

# 3. add sbt public key to ubuntu repo
RUN echo "deb https://repo.scala-sbt.org/scalasbt/debian all main" \
    | tee /etc/apt/sources.list.d/sbt.list && \
    curl -sL "https://keyserver.ubuntu.com/pks/lookup?op=get&search=0x99E82A75642AC823" | apt-key add -

# 4. install sbt
RUN apt-get update && \
    apt-get install -y --no-install-recommends sbt=1.5.5 && \
    apt-get clean && rm -rf /var/lib/apt/lists/*

# 5. set up work dir
WORKDIR /app

# 6. update play env (No code inside)
RUN sbt update

# 7. expose port
EXPOSE 9036

# 8. run env, waiting for code merged
CMD ["sleep", "infinity"]
